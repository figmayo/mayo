{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "scripthost",
      "es2015.promise",
      "es2015.generator",
      "es2015.iterable",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "outDir": "build",
    "strict": false,
    "target": "es5",
    "declaration": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "figma-variables.types": ["src/figma-variables.types.ts"],
      "figma.types": ["src/figma.types.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "__tests__/**/*"],
  "ts-node": {
    "files": true
  }
}
