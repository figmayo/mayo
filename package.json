{
  "name": "@figmayo/mayo",
  "version": "0.0.1",
  "description": "mayo CLI",
  "private": true,
  "types": "build/types/types.d.ts",
  "bin": {
    "mayo": "bin/mayo"
  },
  "packageManager": "npm@10.1.0",
  "main": "build/lib/index.js",
  "scripts": {
    "clean-build": "rimraf -rf ./build",
    "compile:cli": "tsc -p tsconfig.cli.json",
    "compile:lib": "tsc -p tsconfig.lib.json",
    "compile": "npm run compile:cli && npm run compile:lib",
    "build": "npm run clean-build && npm run compile",
    "prepublishOnly": "npm run build",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "test": "vitest run",
    "watch": "vitest",
    "snapupdate": "vitest --update"
  },
  "files": [
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "gluegun": "latest",
    "keytar": "^7.9.0",
    "kleur": "^4.1.5",
    "ky": "^1.7.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "~4.5.0",
    "vitest": "^2.0.5"
  },
  "prettier": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
